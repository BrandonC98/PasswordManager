<Window x:Class="PasswordManagerView.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManagerView"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Background="#FF7C7C7C">

    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top"> 
            <Button Content="Login" MinWidth="100" Click="BtnClickLoginPage"/>
            <Button Content="Signup" MinWidth="100" Margin="10,0,0,0" Click="BtnClickSignUpPage"/>
        </StackPanel>
        <Frame x:Name="MainLogin" Margin="0,35,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
